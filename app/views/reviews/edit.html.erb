<h1>Edit Comicbook Review</h1>

<%= form_for @review do |f| %>
<% if @review.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@review.errors.count, "error") %> prohibited this Review from being saved:</h2>

  <ul>
    <% @review.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= f.label :rating %>
  <%= f.select(:rating, [1,2,3,4,5], :prompt => 'Rating (1-5)') %>
</div>

<div class="field">
  <%= f.label :comment %>
  <%= f.text_area :comment %>
</div>

<div class="actions">
  <%= f.submit %>
</div>

<% end %>